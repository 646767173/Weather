.container{
	height: 100vh;
	display: flex;
	flex-direction: column;
	justify-content: space-around;
	background-color: skyblue;
}
.head{
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-between;
}
.left{
	height: auto;
	display: flex;
	flex-direction: row;
	align-items: center;
	justify-content:space-around;
}
.content{
	width: 98%;
	display: flex;
	flex-direction: row;
	border: 1px solid black;
}
.index{
	height: auto;
	width: 98%;
	display: flex;
	margin: 100rpx 7rpx;
	justify-content: left;
	border: 1px solid black;
	flex-direction: column;
}
.bar{
	display: flex;
	flex-direction: row;
	margin: 20rpx 0;
}
.box{
	width: 33.3%;
	text-align: center;
}
.box2{
	width: 29%;
	text-align: center;
}
image{
	height: 50rpx;
	width:  55rpx;
}
text{
	font-size: 40rpx;
	color: #2e75bd;
}